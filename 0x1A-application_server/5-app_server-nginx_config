# To gain a comprehensive understanding of Nginx configuration files and harness its full potential, refer to the following URLs:
# - Pitfalls: http://wiki.nginx.org/Pitfalls
# - QuickStart: http://wiki.nginx.org/QuickStart
# - Configuration: http://wiki.nginx.org/Configuration
#
# It's advisable to relocate this file for organization purposes and start with a clean configuration. Alternatively, you can disable it in sites-enabled.
#
# For detailed examples, please consult /usr/share/doc/nginx-doc/examples/.

# Default server configuration
#
server {
    root /home/ubuntu/AirBnB_clone_v4/web_dynamic/;
    listen 80 default_server;
    rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;
    listen [::]:80 default_server;

    # SSL configuration
    #
    # listen 443 ssl default_server;
    # listen [::]:443 ssl default_server;
    #
    # Note: Gzip should be disabled for SSL traffic.
    # Refer to: https://bugs.debian.org/773332
    #
    # Explore ssl_ciphers for a secure configuration.
    # See: https://bugs.debian.org/765782
    #
    # Note: Self-signed certificates generated by the ssl-cert package
    # should not be used in a production server!
    #
    # include snippets/snakeoil.conf;

    #root /var/www/html;

    # Add index.php to the list if PHP is used
    # index index.html index.htm index.nginx-debian.html;

    server_name localhost;
    error_page 404 /custom_404.html;
    location = /custom_404.html {
        root /var/www/html;
        internal;
    }

    location /hbnb_static {
        alias /data/web_static/current/;
    }

    location /airbnb-onepage/ {
        include proxy_params;
        proxy_pass http://127.0.0.1:5000;
    }

    location /airbnb-dynamic/number_odd_or_even/ {
        proxy_pass http://127.0.0.1:5001/number_odd_or_even/;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:5002/api/;
    }

    location /static {
        try_files $uri $uri/ =404;
    }

    location / {
        # Serve request as file first, then as directory, and fallback to 404.
        # try_files $uri $uri/ =404;
        proxy_pass http://0.0.0.0:5003/2-hbnb;
    }
    # Pass PHP scripts to FastCGI server
    #
    # location ~ \.php$ {
    #       include snippets/fastcgi-php.conf;
    #
    #       # With php7.0-cgi alone:
    #       fastcgi_pass 127.0.0.1:9000;
    #       # With php7.0-fpm:
    #       fastcgi_pass unix:/run/php/php7.0-fpm.sock;
    # }

    # Deny access to .htaccess files if Apache's document root overlaps with nginx's
    #
    # location ~ /\.ht {
    #       deny all;
    # }
}

