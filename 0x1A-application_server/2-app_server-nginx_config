# Default server configuration
#
server {
        listen 80 default_server;
        rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;
        listen [::]:80 default_server;

        # SSL configuration
        #
        # listen 443 ssl default_server;
        # listen [::]:443 ssl default_server;
        #
        # Note: Disabling gzip for SSL traffic is recommended. Refer to https://bugs.debian.org/773332.
        #
        # Review ssl_ciphers for ensuring a secure configuration. Learn more at https://bugs.debian.org/765782.
        #
        # Avoid using self-signed certificates generated by the ssl-cert package in production servers.
        #
        # include snippets/snakeoil.conf;

        root /var/www/html;

        # Add index.php to the list if PHP is in use
        index index.html index.htm index.nginx-debian.html;

        server_name localhost;
        error_page 404 /custom_404.html;
        location = /custom_404.html {
                root /var/www/html;
                internal;
        }

        location /hbnb_static {
                 alias /data/web_static/current/;
        }

        location /airbnb-onepage/ {
                include proxy_params;
                proxy_pass http://127.0.0.1:5000;
        }

        location / {
                # Attempt to serve request as a file first, then as a directory, and finally display a 404 error if not found.
                try_files $uri $uri/ =404;
        }
	# Pass PHP scripts to FastCGI server listening on 127.0.0.1:9000
        #
        #location ~ \.php$ {
        #       include snippets/fastcgi-php.conf;
        #
        #       # With php7.0-cgi alone:
        #       fastcgi_pass 127.0.0.1:9000;
        #       # With php7.0-fpm:
        #       fastcgi_pass unix:/run/php/php7.0-fpm.sock;
        #}

        # Deny access to .htaccess files if Apache's document root coincides with nginx's one
        #
        #location ~ /\.ht {
        #       deny all;
        #}
}

